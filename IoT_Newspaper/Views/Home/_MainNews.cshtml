                        </div>
                    </div>
                    <div class="featured-post" style="background: url('@Model.ElementAt(3).Image');">
                        <div class="post-info">
                            <a href="@Model.ElementAt(3).Url" class="cat-name tt-u">@Model.ElementAt(3).Categories</a>
                            <h3 class="fw-6 fz-16">
                                <a href="@Model.ElementAt(3).Url" class="text-white">@Model.ElementAt(3).Title</a>
                            </h3>
                        </div>
                    </div>
                </div><!-- /.post-carousel -->
            </div>
        }

    </div>

</div>