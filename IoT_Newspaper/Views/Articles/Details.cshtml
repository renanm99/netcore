@model IoT_Newspaper.Models.FeedModel

@{
    ViewData["Title"] = "Article";
}

<div class="main-content mt-20 ov-hidden">
    <div class="col-md-8 sm-padding">

        <div style="margin-top:-20px;margin-left:-30px;padding-right:-100px;">
            <section class="main-wrapper bg-grey">
                <div class="container">
                    <div class="main-content mt-20 ov-hidden">
                        <div class="col-md-8 sm-padding">
                            <div class="blog-details padding-25 bg-white bd-grey mb-30">
                                @if(Model.ValidImg){
                                    <figure>
                                        <img src="@Html.DisplayFor(item => item.Img)" alt="" style="max-width: 66%" class="img-w1">
                                    </figure>
                                }
                                <h2 class="mb-5 fw-6"><a href="@Html.DisplayFor(item => item.Link)">@Html.DisplayFor(item => item.Title)</a>
                                </h2>
                                <div class="meta-info mb-25">
                                    <span>
                                        <i class="ti-calendar fz-18"></i> <a>@Html.DisplayFor(item => item.PublishDate)</a>
                                    </span>
                                </div><!-- blog-details -->
                                <p>@Html.DisplayFor(item => item.Content)</p>

                            </div><!-- /.blog-details -->

                        </div>
                    </div>
                </div>
            </section>
        </div>



    </div><!-- content block -->



    <aside class="col-md-4 sm-padding">
        <div class="sidebar-wrap">

            <div class="single-sidebar">
                <h3 class="fw-8 fz-18 tt-u mb-30">Keep in touch</h3>
                <form action="#" class="subscribe-form">
                    <a href="https://goo.gl/forms/b3ltpjtSOtrWdxCj2" target="_blank">
                        <input class="b-btn" type="button" value="Subscribe">
                    </a>
                </form>
            </div>

        </div>
    </aside>

</div>

